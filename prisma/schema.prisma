generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String         @id
  shop          String         @unique
  state         String
  isOnline      Boolean        @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean        @default(false)
  locale        String?
  collaborator  Boolean?       @default(false)
  emailVerified Boolean?       @default(false)
  customerSetup CustomerSetup?
}

model CustomerSetup {
  id                             String   @id @default(uuid())
  shopName                       String   @unique
  companyName                    String
  customerEmail                  String
  customerPhoneNumberCountryCode String
  customerPhoneNumber            String
  appName                        String
  createdAt                      DateTime @default(now())
  updatedAt                      DateTime @updatedAt
  session                        Session  @relation(fields: [shopName], references: [shop])
  themeConfigurations            ThemeConfiguration[]
}

model ThemeConfiguration {
  id                   String   @id @default(uuid())
  shopName             String
  themeCode            String
  primaryColor         String
  secondaryColor       String
  backgroundColor      String
  buttonColor          String
  appBarBackgroundColor String
  buttonRadius         String
  edgePadding          String
  splashScreenWidth    String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  customerSetup        CustomerSetup @relation(fields: [shopName], references: [shopName])
}
